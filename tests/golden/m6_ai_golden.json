{
  "description": "M6 AI Text Generation - Golden Tests",
  "version": "1.0.0",
  "tests": {
    "m6_ai_cache_keys": {
      "description": "Cache key generation must be deterministic",
      "cases": [
        {
          "name": "same_inputs_same_key",
          "input": {
            "provider": "mock",
            "repo_id": "test-repo",
            "seed": 123,
            "lang": "en",
            "content_version": "1.0",
            "kind": "enemy_intro",
            "enemy_id": "enemy_fix"
          },
          "expected_key_hash": "sha256"
        },
        {
          "name": "different_seed_different_key",
          "input": {
            "provider": "mock",
            "repo_id": "test-repo",
            "seed": 123,
            "lang": "en",
            "content_version": "1.0",
            "kind": "enemy_intro"
          },
          "assertion": "key_must_differ_from_seed_456"
        },
        {
          "name": "different_lang_different_key",
          "input": {
            "provider": "mock",
            "repo_id": "test-repo",
            "seed": 789,
            "lang": "zh_CN",
            "content_version": "1.0",
            "kind": "battle_start"
          },
          "assertion": "key_must_differ_from_lang_en"
        },
        {
          "name": "prompt_version_affects_key",
          "input": {
            "provider": "mock",
            "repo_id": "test-repo",
            "seed": 999,
            "lang": "en",
            "content_version": "1.0:1.0",
            "kind": "event_flavor"
          },
          "assertion": "key_must_differ_from_prompt_version_1.1"
        }
      ]
    },
